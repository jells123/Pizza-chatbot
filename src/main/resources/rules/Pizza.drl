end

rule "Podano nazwe pizzy"
    salience 2

    when
        f : Fakt(nazwa == "nazwano_pizze")
        baza : BazaWiedzy()
        eval( baza.jestNazwanaPizza(f.getWartosc()) )
    then
        insert(new Fakt("pizza_propozycja", f.getWartosc()));
        System.out.println("Dobrze, zamawiam konkretna pizze: " + f.getWartosc());
end

